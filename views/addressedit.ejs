<script>
    
    function editaddress(){
        const name = document.getElementById('name').value.trim()
        const mobile = document.getElementById('mobile').value.trim()
        const address = document.getElementById('address').value.trim()
        const pincode = document.getElementById('pincode').value.trim()
        const location = document.getElementById('location').value.trim()
        const city = document.getElementById('city').value.trim()
        const sate = document.getElementById('sate').value
        const country = document.getElementById('country').value.trim()
        const addresstype = document.getElementById('addresstype').value

        const fillerror = document.getElementById('fillerror')
        const nameError = document.getElementById('error1')
        const phoneError = document.getElementById('error2')
        const addressError = document.getElementById('error3')
        const pinError = document.getElementById('error4')
        const locationError = document.getElementById('error5')
        const cityError = document.getElementById('error6')
        const countryError = document.getElementById('error7')
       
        fillerror.textContent = ""
        nameError.textContent = ""
        phoneError.textContent = ""
        addressError.textContent =""
        pinError.textContent =""
        locationError.textContent = ""
        cityError.textContent =""
        countryError.textContent=""

        if(name==""){
            nameError.textContent = "Name is required"
        }else if(name.legth < 3){
            nameError.textContent = "Name must have 3 charecter"
        }else if(!/^[A-Za-z\s]+$/.test(name)){
            nameError.textContent = "Name can only contain alphabets and spaces"
        }
        


        if(mobile===""){
            phoneError.textContent="Mobile is required"
        }else if(!/^\d+$/.test(mobile)){
            phoneError.textContent ="Phone number must contain only numbers"
        }else if(mobile.length!==10){
            phoneError.textContent = "Number Should be 10 digit"
        }

        if(address===""){
            addressError.textContent = "Address is required"
        }else if(!/^[a-zA-Z0-9\s,'/.()-]+$/.test(address)){
            addressError.textContent = "Enter a valid address"
        }
        

        if(pincode===""){
          pinError.textContent = "Pincode is required"
        }else if(!/^\d+$/.test(pincode)){
            pinError.textContent = "Pincode must contain only numbers"
        }else if(pincode.length!==6){
            pinError.textContent = "Pincode must be 6 digit"
        }
 
        if(location ===""){
            locationError.textContent = "Location is required"
        }else if(!/^[a-zA-Z0-9\s,'-]+$/.test(location)){
            locationError.textContent = "Enter valid location"
        }




        if(city===""){
            cityError.textContent = "City is required"
        }else if(!/^[a-zA-Z0-9\s,'-]+$/.test(city)){
            cityError.textContent = "Enter a valid city"
        }
        

        if(country==""){
            countryError.textContent = "Country is required"
        }else if (!/^[a-zA-Z0-9\s,'-]+$/.test(country))
            countryError.textContent = "Enter a valid Country"


        if(nameError.textContent!==""||phoneError.textContent!==""||addressError.textContent!==""||pinError.textContent!==""||locationError.textContent!==""||cityError.textContent!==""||countryError.textContent!==""){
            fillerror.textContent = "Enter all fields"
            setTimeout(() => {
                fillerror.textContent = ""
            }, 3000);
        }else{
          
        $.ajax({
            url:"/addressedit",
            method:"post",
            data:{
                name,
                mobile,
                address,
                pincode,
                location,
                city,
                sate,
                country,
                addresstype
              
            },
            success:(response)=>{
                if(response.status === "success"){
                    window.location.href = "/address"

                }else{
                    
                }
            }
        })

        }

