<script>
  function clrmsg(){
    document.getElementById('otperror').textContent = ""
  }

  function verifyOtp(){
    const otp = document.getElementById('otp').value

    const otpError = document.getElementById('otperror')
    otpError.textContent = ""

     $.ajax({
        url:'/verify',
        method:'post',
        data:{
            otp
        },
        success:(response)=>{
            if(response.status === 'ok'){
                window.location.href = '/login'
            }else{
                otpError.textContent = "Invalid Otp !!! Please Check"
                setTimeout(() => {
                    otpError.textContent = ""
                }, 3000);
            }
        }
     })
  }



    function resetOtp(){
      $.ajax({
        url:"/registerresend",
        method:"post",
        success:(response)=>{
            if(response.status === 'resend'){
                window.location.href = "/verify"
            }
        }
      })  
    }

    function updateCountdown() {
		var countdownElement = document.getElementById('timer');
		var time = countdownElement.innerText;
		var timeArray = time.split(':');
		var minutes = parseInt(timeArray[0]);
		var seconds = parseInt(timeArray[1]);

		if (seconds === 0) {
			if (minutes === 0) {
				clearInterval(timer);
				document.getElementById('resendbutton').style.display = 'block'; 
				document.getElementById('timer').style.display = "none"
				document.getElementById('resendmessage').style.display = "block"
				document.getElementById('confirmbtn').style.display = "none";
				
				document.getElementById('otp').style.display = "none"
				return;
			} else {
				minutes--;
			}
		} else {
			seconds--;
		}
		var minutesStr = minutes < 10 ? '0' + minutes : minutes;
		var secondsStr = seconds < 10 ? '0' + seconds : seconds;

		countdownElement.innerText = minutesStr + ':' + secondsStr;
	}
	var timer = setInterval(updateCountdown, 1000);

</script>


