<script>
     function nameErr(){
        document.getElementById('err1').textContent = ''
     }
    
     
    function addCoupon(){

        const currentDate = new Date();
        const couponName = document.getElementById('cname').value
        const satrtindDate = document.getElementById('csdate').value
        const endingDate = document.getElementById('cedate').value
        const minimumAmount = document.getElementById('camount').value
        const percentage = document.getElementById('cpercentage').value
       
        const existError = document.getElementById('exist')
        const fillError = document.getElementById('fillError')
        const nameError = document.getElementById('err1')
        const startDateError = document.getElementById('err2')
        const endDateError = document.getElementById('err3')
        const minimumError = document.getElementById('err4')
        const percentageError = document.getElementById('err5')



        existError.textContent = ""
        fillError.textContent = ""
        nameError.textContent = ""
        startDateError.textContent = ""
        endDateError.textContent = ""
        minimumError.textContent = ""
        percentageError.textContent = ""

        if(couponName === ""){
            nameError.textContent = "Coupen name is required"
        }else if(!/^[A-Z]+$/.test(couponName)){
            nameError.textContent = "Name Should be only capital"
        }

        

      
       
        
        const oneYearLater = new Date();
        oneYearLater.setFullYear(oneYearLater.getFullYear() + 1);
    

        if (satrtindDate === "") {
            console.log(satrtindDate);
            startDateError.textContent = "Starting Date is required";
        } else if (satrtindDate === endingDate) {
            startDateError.textContent = "Starting date should not be same with ending date";
        } 
       
          else if(new Date(satrtindDate) < new Date(currentDate.getFullYear(), currentDate.getMonth(), currentDate.getDate())){
           
            startDateError.textContent = "The starting date should not be yesterday's date";
        }




        if(endingDate === ""){
            endDateError.textContent = "Ending date is required"
        }else if(new Date(endingDate) < new Date(currentDate.getFullYear(), currentDate.getMonth(), currentDate.getDate())){
            endDateError.textContent = "Ending date shouldn't be less than previous date"
        }else if(endingDate === satrtindDate){
            endDateError.textContent = "The ending date should not be same with satrting date"
        }

        if(minimumAmount === ""){
            minimumError.textContent = "The Amount is required"
        }else if(minimumAmount < 800 ){
            minimumError.textContent = "Purchase amount should not less than 800"
        }else if(!/^(0|[1-9]\d*)$/.test(minimumAmount)){
            minimumError.textContent = "Purchase amount should not be 0"
        }

        if(percentage === ""){
            percentageError.textContent = "The percentage is required"
        }else if(percentage > 100){
            percentageError.textContent = "Percentage should not be greater 100"
        }

        if(nameError.textContent||startDateError.textContent||endDateError.textContent||minimumAmount.textContent||percentageError.textContent){
          
            fillError.textContent = "Enter fields"
            setTimeout(() => {
                fillError.textContent = ""
            }, 3000);
        }else{
            
        $.ajax({
            url:'/admin/addcoupon',
            method:'post',
            data:{
                couponName,
                satrtindDate,
                endingDate,
                minimumAmount,
                percentage
            },
            success:(response)=>{
                if(response.status === 'creat'){
                    window.location.href = '/admin/coupons'
                }else if(response.status === 'exist'){
                    existError.textContent = "this coupon is exist"
                }
            }
        })
        }


    }
</script>

