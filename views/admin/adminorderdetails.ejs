<script>
  
    function changeStatus(id){
        const status = document.getElementById('status').value
       
      
       $.ajax({
        url:'/admin/status',
        method:'post',
        data:{
           id,
           status
        },
            success:(response)=>{
                if(response.status === 'updated'){
                    window.location.href = '/admin/orderslist'
                }
            }
       }) 
    }


    function back(){
        window.location.href='/admin/orderslist'
    }
</script>


