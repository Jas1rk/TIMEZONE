<script>
    const fetchMonthlyData = async () => {
            try {
                const response = await fetch('/admin/monthlydata');
                const { monthlySales } = await response.json();
                return monthlySales;
            } catch (error) {
                console.error('Error fetching monthly sales data:', error);
                throw error;
            }
        };

        const fetchYearlyData = async () => {
            try {
                const response = await fetch('/admin/yearlydata');
                const { yearlySales } = await response.json();
                return yearlySales;
            } catch (error) {
                console.error('Error fetching yearly sales data:', error);
                throw error;
            }
        };

        const renderMonthlySalesChart = async () => {
            const monthlySalesData = await fetchMonthlyData();
            const ctx = document.getElementById('salesChart').getContext('2d');
          
            const monthlyChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Monthly Sales',
                        data: monthlySalesData,
                        backgroundColor: 'rgba(44, 120, 220, 0.2)',
                        borderColor: 'rgba(44, 120, 220)',
                        tension: 0.3,
                        fill: true,
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        };

        
        const renderYearlySalesChart = async () => {
            const yearlySalesData = await fetchYearlyData();
            console.log(yearlySalesData)
            const ctx = document.getElementById('MyChart').getContext('2d');
            const yearlyChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['2022', '2023', '2024', '2025'], 
                    datasets: [{
                        label: 'Yearly Sales',
                        data: yearlySalesData,
                        backgroundColor: 'rgba(380, 200, 230, 0.2)',
                        borderColor: 'rgb(380, 200, 230)',
                        tension: 0.3,
                        fill: true,
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        };


        window.onload = async () => {
            await renderMonthlySalesChart();
            await renderYearlySalesChart();
        };
 
     
