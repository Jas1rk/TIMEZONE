<script>

    function cancelIndividual(productid,productPice,productQuantity,orderID){
         $.ajax({
            url:'/individualcancel',
            method:'post',
            data:{
                productid,
                productPice,
                productQuantity,
                orderID
            },
            success:(response)=>{
                if(response.status === true){
                    window.location.reload()
                }
            }
         })
    }

function cancelOrder(id,paymentMethod,userID){
 
    
 $.ajax({
    url:'/cancelorder',
    method:'post',
    data:{
        id,
        paymentMethod,
        userID
    },
    success:(response)=>{
        if(response.status === 'cancel'){
            window.location.href = '/orders'
        }
    }
 })
