<script>

function cancelOrder(id,paymentMethod,userID){
 
    
 $.ajax({
    url:'/cancelorder',
    method:'post',
    data:{
        id,
        paymentMethod,
        userID
    },
    success:(response)=>{
        if(response.status === 'cancel'){
            window.location.href = '/orders'
        }
    }
 })
}

function openReturnModal(id){
    const modal = document.getElementById('returnModal');
    modal.style.display = "block";
}

function closeReturnModal(){
    const modal = document.getElementById('returnModal');
    modal.style.display = "none";
}

function submitReturn(id){
    const selectResons = document.querySelectorAll('input[name="returnReason"]:checked');
    if(selectResons.length === 0){
        document.getElementById('errormessage').textContent = "Please select atleast one reason"
        return;
    }else{
        document.getElementById('errormessage').textContent = ""
    }
   

    const reasons = [];
    selectResons.forEach(reason => {
        reasons.push(reason.value);
    });

    $.ajax({
        url: '/return',
        method: "post",
        data: {
            id: id,
            reasons: reasons
        },
        success: (response) => {
            if (response.status === "return") {
               
                const Toast = Swal.mixin({
                    toast: true,
                    position: "bottom",
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                    });
                    Toast.fire({
                    icon: "success",
                    title: "Request sent successfully"
                    });
                    closeReturnModal();
                    setTimeout(() => {
                        window.location.href = '/orders';
                       
                    }, 3000);
               
            }
        },

    });
}

const returnReasonCheckboxes = document.querySelectorAll('input[name="returnReason"]');
returnReasonCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
        document.getElementById('errormessage').textContent = ""
    });
});

function back(){
    window.location.back()
}

</script>

