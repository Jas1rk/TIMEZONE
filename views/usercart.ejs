<script>

    function checkout() {
        $.ajax({
            url: '/checkoutpage',
            method: "get",
            success: (response) => {
                if (response.status === 'checked') {
                    Swal.fire({
                        icon: "warning",
                        title: "Oops...",
                        text: "check your Cart!",
                        iconColor:"#3F2520",
                        customClass: {
                            confirmButton: 'black-ok-button'
                    },

                    });

                } else if (response.status === true) {
                    
                    window.location.href = "/checkout"
                }
            }
        })
    }



    function increment(id) {

        const quantity = document.getElementById(`spnid${id}`).innerHTML;


        $.ajax({
            url: "/increment",
            method: "post",
            data: {
                id,
                quantity
            },
            success: (response) => {
                if (response.status === "increment") {

                    const quantityElement = document.getElementById(`spnid${id}`)
                    const totalElement = document.getElementById(`total${id}`);
                    quantityElement.innerHTML = parseInt(quantityElement.innerHTML) + 1
                    const qty = parseInt(quantityElement.innerHTML)
                    const ttl = parseInt(totalElement.innerHTML)
                    const price = document.getElementById(`price${id}`).textContent
                    const x = parseInt(price)
                    const carttotal = parseInt(document.getElementById('carttotal').innerHTML)
                    const carttotal1 = parseInt(document.getElementById('carttotal1').innerHTML)

                    document.getElementById('carttotal').innerHTML = carttotal + x
                    document.getElementById('carttotal1').innerHTML = carttotal1 + x

                    totalElement.innerHTML = ttl + x


                }else if(response.status === "limit" ){
                    Swal.fire({
                    title: "You've reached limit",
                    icon: "warning",
                    customClass: {
                            confirmButton: 'black-ok-button'
                    },
                    showClass: {
                        popup: `
                        animate__animated
                        animate__fadeInUp
                        animate__faster
                        `
                    },
                    hideClass: {
                        popup: `
                        animate__animated
                        animate__fadeOutDown
                        animate__faster
                        `
                    },
                    iconColor: "#3F2520"
                    });
                }else if(response.status === "outofstock"){

                    Swal.fire({
                    title: "Out Of Stock",
                    icon: "warning",
                    customClass: {
                        confirmButton: 'black-ok-button'
                    },
                    showClass: {
                        popup: `
                        animate__animated
                        animate__fadeInUp
                        animate__faster
                        `
                    },
                    hideClass: {
                        popup: `
                        animate__animated
                        animate__fadeOutDown
                        animate__faster
                        `
                    },
                    iconColor: "#3F2520"
                    });
                } 
            }
        })

    }

    function decrement(id) {
        const quantity = document.getElementById(`spnid${id}`).innerHTML;


        $.ajax({
            url: "/decrement",
            method: "post",
            data: {
                id,
                quantity
            },
            success: (response) => {
                if (response.status === 'decrement') {
                    const quantityElement = document.getElementById(`spnid${id}`)
                    const totalElement = document.getElementById(`total${id}`)
                    quantityElement.innerHTML = parseInt(quantityElement.innerHTML) - 1
                    const qty = parseInt(quantityElement.innerHTML)
                    const ttl = parseInt(totalElement.innerHTML)
                    const price = document.getElementById(`price${id}`).textContent
                    const x = parseInt(price)
                    const carttotal = parseInt(document.getElementById('carttotal').innerHTML)
                    const carttotal1 = parseInt(document.getElementById('carttotal1').innerHTML)

                    document.getElementById('carttotal').innerHTML = carttotal - x
                    document.getElementById('carttotal1').innerHTML = carttotal - x

                    totalElement.innerHTML = ttl - x

                }else if(response.status === "minimum"){
                    Swal.fire({
                    title: "Minimum 1 product",
                    icon: "warning",
                    customClass: {
                        confirmButton: 'black-ok-button'
                    },
                    showClass: {
                        popup: `
                        animate__animated
                        animate__fadeInUp
                        animate__faster
                        `
                    },
                    hideClass: {
                        popup: `
                        animate__animated
                        animate__fadeOutDown
                        animate__faster
                        `
                    },
                    iconColor: "#3F2520"
                    });
                }
            }

        })

    }


    function cartdelete(id, quantity) {

        Swal.fire({
            title: "Are you sure?",
            color : 'black',
            icon: "question",
            iconColor:'#3F2520',
            showCancelButton: true,
            confirmButtonColor: "#3F2520",
            cancelButtonColor: "#000000",
            confirmButtonText: "Yes, delete it!",
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/deletecart",
                    method: "delete",
                    data: {
                        id,
                        quantity
                    },
                    success: (response) => {
                        if (response.status === 'delete') {
                            window.location.reload()
                        }
                    }
                })
            }
        })


    }

</script>


